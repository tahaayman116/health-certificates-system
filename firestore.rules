rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // السماح بالقراءة والكتابة للجميع للإجازات المرضية
    match /medical-leaves/{document} {
      allow read, write: if true;
    }
    
    // السماح بالقراءة والكتابة للجميع للشهادات الصحية
    match /certificates/{document} {
      allow read, write: if true;
    }
    
    // السماح بالقراءة والكتابة لباقي المجموعات
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
