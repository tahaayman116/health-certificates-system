rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // قواعد للشهادات الصحية
    match /certificates/{document} {
      allow read, write: if true;
    }
    
    // قواعد للإجازات المرضية
    match /medical-leaves/{document} {
      allow read, write: if true;
    }
    
    // قواعد عامة لباقي المجموعات
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
